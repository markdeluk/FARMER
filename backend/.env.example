# Copia questo file in .env e modifica i valori secondo le tue necessit√†

# Configurazione Database
RESET_DB_ON_STARTUP=true
DATABASE_URL=sqlite:///./test.db

# Configurazione JWT - CAMBIA QUESTE IN PRODUZIONE!
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configurazione Server
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS - Aggiungi i domini autorizzati separati da virgola
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Esempi per altri database:
# DATABASE_URL=postgresql://user:password@localhost/dbname
